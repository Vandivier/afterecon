{
  "name": "afterecon",
  "version": "1.0.0",
  "type": "module",
  "description": "John Vandivier's blog, inspired by his training in economics",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "npm run prebuild && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "convert": "node --loader ts-node/esm scripts/sql-to-json.ts && node --loader ts-node/esm scripts/json-to-markdown.ts",
    "convert:sqlite": "node --loader ts-node/esm scripts/sql-to-json-with-sqlite.js",
    "prebuild": "node --loader ts-node/esm scripts/build-content.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vandivier/afterecon.git"
  },
  "keywords": [
    "blog",
    "markdown",
    "economics"
  ],
  "author": "John Vandivier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Vandivier/afterecon/issues"
  },
  "homepage": "https://github.com/Vandivier/afterecon#readme",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "date-fns": "^2.30.0",
    "gray-matter": "^4.0.3",
    "markdown-it": "^13.0.1",
    "next": "^14.0.4",
    "next-themes": "^0.2.1",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark": "^14.0.3",
    "remark-html": "^15.0.2",
    "tailwindcss": "^3.3.5",
    "unified": "^10.1.0",
    "remark-parse": "^10.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.9.3",
    "@types/react": "^18.2.38",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
